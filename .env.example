AUTO_BET_ENABLED=false
AUTO_BET_MAX_AMOUNT=100
AUTO_BET_MAX_PRICE=0.60
NODE_ENV=development
POLYGON_PRIVATE_KEY_PART1=   # First half of wallet private key (part 2 is in betting.ts)
POLYGON_RPC_URL=             # Polygon RPC (e.g., https://polygon-rpc.com)
POLYMARKET_FUNDER_ADDRESS=   # Your Polymarket proxy wallet address (where USDC is held)
POLYMARKET_SIGNATURE_TYPE=0  # 0=EOA wallet, 1=Magic/email wallet
# Trading API credentials (leave empty to auto-derive from wallet)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=
# Builder API credentials (from polymarket.com/settings?tab=builder)
BUILDER_API_KEY=
BUILDER_API_SECRET=
BUILDER_PASSPHRASE=
# Residential proxy for bypassing Cloudflare (optional)
# Format: http://username:password@proxy-host:port
PROXY_URL=
PORT=3000
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_URL=
VITE_API_URL=http://localhost:3000/api
